{
  "name": "hengdang-utils",
  "version": "1.0.0",
  "description": "Utility tools for Hengdang protocol",
  "main": "dist/index.js",
  "bin": {
    "hengdang-keygen": "dist/bin/key-generate.js",
    "hengdang-restore": "dist/bin/key-restore.js",
    "hengdang-encrypt": "dist/bin/file-encrypt.js",
    "hengdang-decrypt": "dist/bin/file-decrypt.js",
    "hengdang-share": "dist/bin/file-share.js",
    "hengdang-receive": "dist/bin/file-receive.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "key:generate": "ts-node src/bin/key-generate.ts",
    "key:restore": "ts-node src/bin/key-restore.ts",
    "file:encrypt": "ts-node src/bin/file-encrypt.ts",
    "file:decrypt": "ts-node src/bin/file-decrypt.ts",
    "file:share": "ts-node src/bin/file-share.ts",
    "file:receive": "ts-node src/bin/file-receive.ts",
    "test": "jest"
  },
  "keywords": [
    "hengdang",
    "encryption",
    "keys"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
    "@scure/bip32": "^1.3.1",
    "@types/node": "^20.8.2",
    "bech32": "^2.0.0",
    "bip39": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
